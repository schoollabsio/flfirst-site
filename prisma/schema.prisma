// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FirstEvent {
  id Int @id @default(autoincrement())

  hash            String @unique

  code            String
  name            String
  type            String
  format          String
  season          String
  website         String?
  date_start      DateTime
  date_end        DateTime
  live_stream_url String?
  virtual         Boolean?

  // league info
  league_code     String?
  league_name     String?
  league_remote   Boolean?
  league_location String?

  // location info
  location_name           String
  location_address        String
  location_city           String
  location_state_province String
  location_country        String
  location_zip            String?
  location_timezone       String
  location_website        String?

  // registraion info
  open      Boolean
  opens_at  DateTime?
  closes_at DateTime?
  deadline  DateTime?
  url       String?

  // capacity info
  registered    Int?
  capacity      Int?
  waitlisted    Int?
  waitlist_capacity Int?

  saved_at DateTime

  @@map("first_event")
}

model FirstTeam {
  id Int @id @default(autoincrement())

  name   String
  number Int @unique

  // location
  location_city           String
  location_state_province String
  location_country        String
  location_county         String?

  // league
  league_code     String?
  league_name     String?
  league_remote   Boolean?
  league_location String?

  // other
  rookie_year String
  website     String?
  url         String
  event_ready Boolean

  saved_at DateTime

  @@map("first_teams")
}

model FirstVideo {
  id Int @id @default(autoincrement())

  event_code  String
  event_name  String
  team        Int
  award       String
  url         String?
  available_at DateTime

  saved_at DateTime @default(now())

  @@map("first_videos")
}
